<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  		<h1>User info</h1>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
   <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
<% end %>

    <%= form_with model: @user do |user| %>
      <div class="form-group">
        <p>Name</p>
        <%= user.text_field :name %>
      </div>

      <div class="form-group">
        <p>Image</p>
        <%= user.file_field :profile_image %>
      </div>

      <div class="form-group">
        <p>Introduction</p>
          <%= user.text_area :introduction %>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
      </div>
    <% end %>

    </div>
  </div>
</div>