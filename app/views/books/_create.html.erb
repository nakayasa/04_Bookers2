  <h2>New book</h2>
    <%= form_with model: booknew do |f| %>
      <div class="create">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>

      <div class="create">
        <p>Body</p>
          <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
    <% end %>