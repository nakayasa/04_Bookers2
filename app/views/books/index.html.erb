<h2>プロフィール画像</h2>
 <% if @user.image.attached? %>
  <%= image_tag @user.image, size: "200x200" %>
 <% else %>
  <%= image_tag 'no_image', size: '200x200' %>
 <% end %>

<h2>タイトル</h2>
<p><%= @book.title %></p>
<%= link_to, edit_book_path(@book.id) %>

<h2>本文</h2>
<p><%= @book.body %></p>


<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
